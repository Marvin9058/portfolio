<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".JoinActivity">

    <TextView
        android:id="@+id/join_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingTop="30dp"
        android:text="JOIN"
        android:textColor="#191919"
        android:textSize="50sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/title_under_line"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginLeft="30dp"
        android:background="#777777"
        app:layout_constraintTop_toBottomOf="@id/join_title" />

    <TextView
        android:id="@+id/step_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:paddingLeft="30dp"
        android:text="Step_01"
        android:textColor="#191919"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/title_under_line" />

    <EditText
        android:id="@+id/edit_step_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:background="#FFF"
        android:hint="이메일을 입력하세요"
        android:maxLines="1"
        android:textColorHint="#777"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/step_one" />

    <TextView
        android:id="@+id/step_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:paddingLeft="30dp"
        android:text="Step_02"
        android:textColor="#191919"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/edit_step_one" />

    <EditText
        android:id="@+id/edit_step_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:background="#FFF"
        android:hint="비밀번호 6자리 이상을 입력하세요"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textColorHint="#777"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/step_two" />

    <TextView
        android:id="@+id/step_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:paddingLeft="30dp"
        android:text="Step_03"
        android:textColor="#191919"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/edit_step_two" />

    <EditText
        android:id="@+id/edit_step_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:background="#FFF"
        android:hint="닉네임을 입력하세요"
        android:maxLines="1"
        android:textColorHint="#777"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/step_three" />

    <Button
        android:id="@+id/join_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="10dp"
        android:background="#E1F5FE"
        android:text="JOIN"
        android:textColor="#191919"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_step_three" />

    <Button
        android:id="@+id/back_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="#FFEBEE"
        android:text="BACK"
        android:textColor="#191919"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/join_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>